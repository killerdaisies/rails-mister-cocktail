<div></div>
<h1><%= @cocktail.name %></h1>
<p> <%= @cocktail.description %> </p>
<h3>Ingredients</h3>
<% @doses.each do |dose| %>
  <p> <%= dose.description %> | <%= Ingredient.find(dose.ingredient_id).name %> <%= link_to "delete", dose_path(dose), method: :delete %></p>
<% end %>
<p> <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail)  %> </p>
<p> <%= link_to "Back to all cocktails", cocktails_path %> </p>
<p> <%= link_to "edit", edit_cocktail_path(@cocktail) %> </p>
<p> <%= link_to "delete", cocktail_path(@cocktail), method: :delete %> </p>

<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-md-6 col-md-offset-3">
      <h2> Add a New Cocktail</h2>
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <h3> Add a Dose for Your Cocktail </h3>
        <%= f.simple_fields_for :doses do |form| %>
          <%= form.input :description %>
          <%= form.input :ingredient_id, as: :select, collection: @ingredients %>
        <% end %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "add a cocktail!", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>